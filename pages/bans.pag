				$sql_query=("Select * FROM bans WHERE ip LIKE '%$query_clean%'");
			}else if ($query_type == "RE") {
				$info = "<b>Search Type: </b>Reason query<br><b>You Searched: </b>".$query_clean."<br><br>";
				$sql_query=("Select * FROM bans WHERE reason LIKE '%$query_clean%'");
			}
			
			// Run query
			$query_result=mysql_query($sql_query);
			if(mysql_num_rows($query_result)<1){ // No results found
