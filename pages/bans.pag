			$search_query = $_POST['query'];
			$query_clean = sanitize($search_query);
			
			// Check query type
			if ($query_type == "BA") {
				$info = "<b>Search Type: </b>Banner query<br><b>You Searched: </b>".$query_clean."<br><br>";
